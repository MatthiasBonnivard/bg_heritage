using UnityEngine;
using System.Collections;

public class s_input : MonoBehaviour {
	
	public static float pressure;
	public static float normalPressure = 0;
	
	//	input_keyboard		0f or 1f, key m
	//	input_micro			0f to 1f, sound from external microphone
	//  input_pep_redbox	0f to 1f, pressure from usb prototype, with instance
	//  input_pep_redbox2	0f to 1f, pressure from usb pressure prototype, with timeout and try
	//	Input_pep_onatha	0f to 1f, pressure from usb key

	public GUIText g_text_info;

	void Start () {

	}
	
	void Update () {
		if (pressure < -0.38378)		// 7.8 cm H20
		{
			g_text_info.text = "Expire plus fort";
		}
		else if (pressure < -0.21569)	// 10 cm H20, exhaling during a rep, but not within the recommended bound
		{
			g_text_info.text = "Expire plus fort";
		}
		else if(pressure < 0.56863)  // 10 to 20 cm H20, optimal zone for PEP therapy
		{
			g_text_info.text = "Excellent";
		}
		else  // too hard
		{
			g_text_info.text = "Expire moins fort";		
		}
	}
}
